<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- eclipse 中，选择pom.xml文件，击右键先择Run AS——>Maven Build… ——>在Goals框中输入：mybatis-generator:generate -->
	<!-- 命令行 mvn mybatis-generator:generate -->
	<!-- /home/zhimin/.m2/repository/mysql/mysql-connector-java/5.1.30/mysql-connector-java-5.1.30.jar -->
	<classPathEntry location="E:\workspace/.m2/repository/mysql/mysql-connector-java/5.1.30/mysql-connector-java-5.1.30.jar" />
	<context id="context1" targetRuntime="MyBatis3">
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://127.0.0.1:3306/dev?useUnicode=true&amp;characterEncoding=UTF-8" userId="root"
			password="123456" />
		<!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer, true把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal -->
		<!-- <javaTypeResolver> <property name="forceBigDecimals" value="false" /> </javaTypeResolver> -->

		<!-- 生成model模型，对应的包，存放位置可以指定具体的路径,如src，也可以使用MAVEN来自动生成 -->
		<javaModelGenerator targetPackage="org.my.core.common.model" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!--对应的xml mapper文件 -->
		<sqlMapGenerator targetPackage="org.my.core.common.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!-- 对应的dao接口 -->
		<javaClientGenerator targetPackage="org.my.core.common.dao" targetProject="src/main/java" type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		<table schema="dev" tableName="sys_users" />
		<table schema="dev" tableName="sys_roles" />
		<table schema="dev" tableName="sys_resources" />
		<table schema="dev" tableName="sys_styles" />
		
	</context>
</generatorConfiguration>